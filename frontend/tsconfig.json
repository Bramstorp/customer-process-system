{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "noImplicitAny": true,
    "noErrorTruncation": true,
    "module": "commonjs",
    // Targets ES5, instead of ES6 to make sure to allow typescript to polyfill async/await.
    "target": "esnext",
    "baseUrl": ".",
    "jsx": "react",
    "moduleResolution": "node",
    "noEmit": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {},
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "classnameTransform": "camelCaseOnly",
          "customMatcher": "\\.style\\.css$",
          "dotenvOptions": {},
          "postcssOptions": {},
          "rendererOptions": {}
        }
      }
    ]
  },
  "exclude": [
    "node_modules",
    "dist/*"
  ]
}
